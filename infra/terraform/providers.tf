// Terraform AWS provider configuration
// NOTE: For production, consider using a remote backend (S3 + DynamoDB).

terraform {
  required_version = ">= 1.5.0"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = ">= 5.0"
    }
  }
}

provider "aws" {
  region = var.aws_region
}

